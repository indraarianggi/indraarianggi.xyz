---
import Seo from "@/components/astro/Seo.astro";
import Footer from "@/components/astro/Footer.astro";
import { Navigation } from "@/components/react/Navigation";
import { ThemeProvider } from "@/components/react/ThemeProvider";
import { Toaster } from "@/components/react/Toaster";
import "@/styles/globals.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/avatar.svg" />
    <Seo title={title} description={description} image={image} />
    <script is:inline>
      // Theme initialization script
      try {
        const stored = localStorage.getItem("theme");
        const preferred =
          stored ||
          (matchMedia("(prefers-color-scheme: dark)").matches
            ? "dark"
            : "light");
        document.documentElement.classList.toggle("dark", preferred === "dark");
      } catch {}
    </script>
  </head>
  <body>
    <ThemeProvider client:load attribute="class" defaultTheme="system" enableSystem>
      <div class="flex min-h-screen flex-col">
        <Navigation client:load />
        <main class="flex-1">
          <slot />
        </main>
        <Footer />
      </div>
      <Toaster client:load />
    </ThemeProvider>
  </body>
</html>
